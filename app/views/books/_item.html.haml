%td= item.volume
%td= item.area_name
%td
  %span{class: "label label-default #{@book.category_class}"}= @book.category_view
%td.check_status
  %span.check_status{class: (item.is_available? ? "available-color" : "warning-color")}= item.check_status_view
%td
  = image_tag item.user_image_url, width: USER_SMALL_IMAGE_WIDTH, class: "img-rounded user_image_url"
  %span.name_kanji= item.name_kanji
%td.checked_out_at= item.checked_out_at
%td.due_date
  - if !item.is_available? && item.is_overdue
    %span.warning-color/
  = item.due_date
%td.checked_in_at= item.checked_in_at
%td.operation_link= item.operation_link
