- if @items.empty?
  .inside= t('view.owed_book_empty_message')
- else
  #count_message.inside= t('view.owed_books_count_message', count: @items.count)
  %table.table.table-hover
    %thead
      %tr
        %th
        %th= tt('Book.title')
        %th= tt('Book.author')
        %th= tt('Item.area')
        %th= t('view.check_status')
        %th= t('view.checked_out_date')
        %th= t('view.due_date')
        %th= t('view.checked_in_date')
        %th= t('view.operation')
    %tbody
      - @items.each do |item|
        %tr{item_id: "#{item.item_id}", class: "#{item.background_class}"}
          =render 'users/item', item: item
