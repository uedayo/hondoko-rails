= form_for(@area) do |f|
  - if @area.errors.any?
    #error_explanation
      %h2
        = pluralize(@area.errors.count, "error")
        prohibited this area from being saved:
      %ul
        - @area.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :description
    %br/
    = f.text_field :description
  .actions
    = f.submit
