<% if @users.empty? %>
<%= render 'users/create' %>
<% else %>
<h2><%= t('view.login') %></h2>
<table class="table table-striped table-hover">
  <thead>
  <tr>
    <td></td>
    <td><%= t('view.name_kanji') %></td>
    <td><%= t('view.name_hiragana') %></td>
  </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr user_id="<%= user.id %>">
      <td><%= link_to image_tag(user.image_url, :width => USER_IMAGE_WIDTH, :class => "img-rounded"), user_path(user) %></td>
      <td><%= user.last_name_kanji + " " + user.first_name_kanji %></td>
      <td><%= user.last_name_hiragana + " " + user.first_name_hiragana %></td>
    </tr>
  <% end %>
  </tbody>
</table>
  <%= form_for(:session, url: sessions_path,  html: { id: "session_form" }) do |f| %>
    <%= f.hidden_field :user_id, id: "session_form_user_id" %>
  <% end %>

  <div class="center-horizontal">
  <%= link_to t('view.user_new'), new_user_path, :class => "btn btn-primary btn-large" %>
</div>
<% end %>
